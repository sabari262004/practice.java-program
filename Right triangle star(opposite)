import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner obj=new Scanner(System.in);
       int a=obj.nextInt();
       for(int i=a;i>=1;i--)
       {
           for(int j=1;j<=i;j++)
           {
               System.out.print(" ");
           }
           for(int k=a;k>=i;k--)
           {
               System.out.print("*");
           }
           System.out.println();
       }
    }
}
